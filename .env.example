# Application
APP_NAME=ml-api
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://mlapi:mlapi@localhost:5432/mlapi
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Google Cloud Storage
GCS_BUCKET=ml-api-artifacts
GCS_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Redis (for Arq background jobs)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Job Queue
JOB_QUEUE_ENABLED=true
JOB_TIMEOUT_SECONDS=7200
MAX_CONCURRENT_JOBS=3

# Model defaults
DEFAULT_MODEL_TYPE=catboost
DEFAULT_CLASSIFICATION_METRIC=auc
DEFAULT_REGRESSION_METRIC=rmse

# Optuna defaults
DEFAULT_OPTUNA_N_TRIALS=50
DEFAULT_OPTUNA_TIMEOUT_SECONDS=3600
DEFAULT_OPTUNA_SAMPLER=TPE
DEFAULT_OPTUNA_PRUNER=MedianPruner

# Data
MAX_UPLOAD_SIZE_MB=500
DEFAULT_RANDOM_SEED=42

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ENABLED=true
